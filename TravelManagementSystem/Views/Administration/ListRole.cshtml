@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<br />
<br />
<div class="pb-1">
    <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-outline-primary"> Create New Role</a>
</div>

<h3 class="bg-primary text-white text-center">List Of Roles</h3>
@foreach (var role in Model)
{
    <div class="border pb-2">
        <div class="card-header">
            <strong>RoleId</strong>  : @role.Id
        </div>
        <div class="card-body">
            <strong>Role Name</strong>  : @role.Name
        </div>
        <div class="card-footer">
            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <button type="submit" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want delete @role.Name')">Delete</button>
            </form>
        </div>
    </div>
}