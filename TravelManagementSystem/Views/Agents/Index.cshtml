@using TravelManagementSystem.Helpers 
@model PaginatedList<TravelManagementSystem.Models.Agent>

<div class="container-fluid p-3 mt-lg-3 content" id="mainContent">
   
    <div class="row ">
        <div class="col-lg-10">
            <h3 class="text-primary mb-4">Agent List</h3>
           
        </div>

        <div class="col-2 text-end padding-right">

            <a asp-action="Create" asp-controller="Agents" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Agent
            </a>
            <form asp-action="Index" method="get" class="mt-3 pb-1">
                <div class="input-group">
                    <input type="text" name="SearchString" class="form-control" placeholder="Search" aria-label="Search" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <hr />
    </div>
    <div class="row border border-info mt-3 p-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>WhatsApp</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Office Address</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agent in Model)
                {
                    <tr>

                        @* <td>@agent.Name</td> *@
                        <td>
                            <a asp-action="HeaderAndLine" asp-route-id="@agent.Id" style="text-decoration:none;">@agent.Name</a>
                        </td>
                        <td>
                            <a href="https://wa.me/@agent.WhatsApp" target="_blank" style="text-decoration:none;">@agent.WhatsApp</a>
                        </td>
                        <td>@agent.Phone</td>
                        <td>@agent.Email</td>
                        <td>@agent.OfficeAddress</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@agent.Id"><i class="fas fa-pen-to-square text-primary"></i></a> |
                            <a asp-action="Details" asp-route-id="@agent.Id"><i class="fas fa-eye text-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@agent.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

       

    </div>
    @* <nav aria-label="Page navigation example"> *@
        <ul class="pagination justify-content-center mt-2">
            <!-- Previous Button -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    <
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@i"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @i
                    </a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    >
                </a>
            </li>
        </ul>
    @* </nav> *@
</div>
