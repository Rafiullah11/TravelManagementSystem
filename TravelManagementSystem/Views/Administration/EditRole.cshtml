@model TravelManagementSystem.Identity.RoleEditViewModel

<div>
    <h3>Edit Role</h3>
</div>
<div>
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="form-label"></label>
        <div class="col-md-10">
        <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="form-label"></label>
        <div class="col-md-10">
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-10">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="ListRole" class="btn btn-success">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.User.Any())
            {
                foreach(var user in Model.User)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
               <h5 class="card-title">No record found</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" 
            class="btn btn-primary">Add or Remove User</a>
           @* <a asp-action="RemoveRole" class="btn btn-danger">Remove User</a>*@
        </div>

    </div>
</form>
</div>