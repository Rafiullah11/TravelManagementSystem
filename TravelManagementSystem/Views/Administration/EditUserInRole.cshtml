@model List<TravelManagementSystem.Identity.UserRoleViewModel>


@{
    var roleId = ViewBag.roleId;
    //var  roleId= ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3> Add or Remove user </h3>
        </div>
        <div class="card-body">
            @for(int i =0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId"/>
                    <input type="hidden" asp-for="@Model[i].UserName"/>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary/>

            @*<a asp-action="EditUserInRole" asp-controller="Administration" asp-route-id="@roleId" class="btn btn-primary">Update</a>*@
            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>

        </div>
    </div>
</form>