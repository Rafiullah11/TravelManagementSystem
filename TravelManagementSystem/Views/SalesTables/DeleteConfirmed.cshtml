@model TravelManagementSystem.Models.SalesTable

@{
    ViewData["Title"] = "Delete Sales";
}

<div class="container p-3 mt-lg-3 content">
    <!-- Card Header -->
    <div class="card shadow mb-2 col-lg-10 offset-1">
        <div class="card-body text-center bg-danger">
            <h4 class="text-light">Delete Sales</h4>
        </div>
    </div>

    <!-- Delete Confirmation Section -->
    <div class="col-lg-10 offset-1">
        <div class="card shadow p-3 mt-4">
            <h3 class="text-danger">Are you sure you want to delete this sales record?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Company)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Company)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Trade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Trade)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SubTrade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SubTrade)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FlightOn)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FlightOn)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Destination)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Destination)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Country)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Credit)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Credit)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Debit)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Debit)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Balance)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Balance)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedBy)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </dl>
        </div>

        <!-- Delete Confirmation Form -->
        <form asp-action="DeleteConfirmed" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
