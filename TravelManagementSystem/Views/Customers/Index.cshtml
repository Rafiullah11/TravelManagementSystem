@model IEnumerable<TravelManagementSystem.Models.Customer>

<div class="container-fluid p-3 mt-lg-3 content" id="mainContent">
    <div class="row">
        <div class="col-9">
            <h3 class="text-primary">Customer List</h3>
        </div>
        <div class="col-3 text-end padding-right">
            <a asp-action="Create" asp-controller="Customers" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Customer
            </a>
        </div>
        <hr />
    </div>
    <div class="row border border-info mt-3 p-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Passport No</th>
                    <th>Country</th>
                    <th>Document</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    var documentPath = "documents/" + (customer.ScanDocumentPath ?? "default-document.png");
                    var fileExtension = System.IO.Path.GetExtension(customer.ScanDocumentPath)?.ToLower();

                    <tr>
                        <td>@customer.Name</td>
                        @* <td>@customer.Phone</td> *@
                        <td><a href="https://wa.me/@customer.Phone" target="_blank">@customer.Phone</a></td>
                        <td>@customer.PassportNo</td>
                        <td>@customer.Country</td>
                        <td>
                            @if (fileExtension == ".pdf")
                            {
                                <a href="@documentPath" target="_blank" class="btn btn-link text-warning" >
                                    <i style="font-size:20px" class="fas fa-file-pdf"></i>
                                </a>
                            }
                            else
                            {
                                <img asp-append-version="true" src="@documentPath" alt="@customer.Name's Document" width="50" height="50" class="bg-warning" />
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@customer.Id"><i class="fas fa-pen-to-square text-primary"></i></a> |
                            <a asp-action="Details" asp-route-id="@customer.Id"><i class="fas fa-eye text-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@customer.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
