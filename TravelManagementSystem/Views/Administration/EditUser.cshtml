@model TravelManagementSystem.Identity.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}
<h2>Edit User </h2>

<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
        <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
        <input asp-for="UserName"  class="form-control"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
        <input asp-for="Email"  class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
        <input type="submit"  value="Update" class="btn btn-primary"/>
        <a asp-action="ListUser" asp-controller="Administration" class="btn btn-danger">Cancel</a>
        </div>
    </div>

        <div class="card mt-3">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                @if(Model.Roles.Any())
            {
                foreach(var role in Model.Roles)
                {
                     <h3 class="card-title">
                    User Name : @role
                    </h3>
                }
            }
            else
            {
                <h3 class="card-title">
                    no user found
                </h3>
            }
           
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-controller="Administration"
                asp-route-id="" class="btn btn-primary">Manage role</a>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h3>User Claims</h3>
            </div>
            <div class="card-body">
                @if(Model.Claims.Any())
            {
                foreach(var claim in Model.Claims)
                {
                     <h3 class="card-title">
                    User Name : @claim
                    </h3>
                }
            }
            else
            {
                <h3 class="card-title">
                    no user found
                </h3>
            }
           
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-controller="Administration"
                asp-route-id="" class="btn btn-primary">Manage Claims</a>
            </div>
        </div>
</form>