@using TravelManagementSystem.Helpers 
@model PaginatedList<TravelManagementSystem.Models.Customer>

<div class="container-fluid p-3 mt-lg-3 content" id="mainContent">
    <div class="row">
        <div class="col-10">
            <h3 class="text-primary">Customer List</h3>
        </div>
        <div class="col-2 text-end padding-right">
            <a asp-action="Create" asp-controller="Customers" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Customer
            </a>
            <form asp-action="Index" method="get" class="mt-3 pb-1">
                <div class="input-group">
                    <input type="text" name="SearchString" class="form-control" placeholder="Search by name" aria-label="Search by name" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <hr />
    </div>
    <div class="row border border-info mt-3 p-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Passport No</th>
                    <th>Country</th>
                    <th>Document</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    var documentPath = "documents/" + (customer.ScanDocumentPath ?? "default-document.png");
                    var fileExtension = System.IO.Path.GetExtension(customer.ScanDocumentPath)?.ToLower();

                    <tr>

                        <td>
                            <a asp-action="HeaderAndLine" asp-route-id="@customer.Id" style="text-decoration:none;">@customer.Name</a>
                        </td>
                        @* <td>@customer.Phone</td> *@
                        <td><a href="https://wa.me/@customer.Phone" target="_blank">@customer.Phone</a></td>
                        <td>@customer.PassportNo</td>
                        <td>@customer.Country</td>
                        <td>
                            @if (fileExtension == ".pdf")
                            {
                                <a href="@documentPath" target="_blank" class="btn btn-link text-warning" >
                                    <i style="font-size:20px" class="fas fa-file-pdf"></i>
                                </a>
                            }
                            else
                            {
                                <img asp-append-version="true" src="@documentPath" alt="@customer.Name's Document" width="50" height="50" class="bg-warning" />
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@customer.Id"><i class="fas fa-pen-to-square text-primary"></i></a> |
                            <a asp-action="Details" asp-route-id="@customer.Id"><i class="fas fa-eye text-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@customer.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

        <ul class="pagination justify-content-center mt-2">
            <!-- Previous Button -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    <
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@i"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @i
                    </a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    >
                </a>
            </li>
        </ul>
</div>